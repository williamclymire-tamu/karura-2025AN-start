<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="wheel_macro" params="prefix parent xyz">
    <link name="${prefix}_wheel_link">
      <visual>
        <geometry><cylinder radius="0.15" length="0.04"/></geometry>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <material name="black">
          <color rgba="0.2 0.2 0.2 1"/>
        </material>
      </visual>
      <collision>
        <geometry><cylinder radius="0.15" length="0.04"/></geometry>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.0115" iyy="0.0115" izz="0.0225"
                 ixy="0.0" ixz="0.0" iyz="0.0"/>
      </inertial>
    </link>
    
    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel_link"/>
      <origin xyz="${xyz}"/>
      <axis xyz="0 1 0"/>
    </joint>
    
    <gazebo reference="${prefix}_wheel_link">
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
      <kp>1000000.0</kp>
      <kd>100.0</kd>
      <material>Gazebo/Black</material>
    </gazebo>
  </xacro:macro>
</robot>
